@page "/counter"
@using SqliteWasmHelper
@inject ISqliteWasmDbContextFactory<ThingContext> Factory
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@foreach (var thing in Things)
{
    <p>
        @thing.Id @thing.Name
    </p>
}
@code {
    private int currentCount = 0;
    private static IComponentRenderMode pageRenderMode = InteractiveWebAssembly;
    List<Thing> Things = new();

    protected override async Task OnInitializedAsync()
    {
        using var ctx = await Factory.CreateDbContextAsync();
        ctx.Database.EnsureCreated();

        Things = ctx.Things.ToList();
    }

    private async Task IncrementCount()
    {
        currentCount++;
        Thing NewThing = new();
        NewThing.Name = $"Thing {currentCount}";

        using var ctx = await Factory.CreateDbContextAsync();
        ctx.Database.EnsureCreated();

        ctx.Things.Add(NewThing);
        await ctx.SaveChangesAsync();

        Things = ctx.Things.ToList();
    }
}
